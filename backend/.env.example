# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# STT Provider Configuration
# ========================================

# STT Provider Selection
# Options: 'rtzr' or 'openai'
STT_PROVIDER=rtzr

# STT Prompt Template (for OpenAI Realtime API)
# Options: 'church', 'medical', 'legal', 'business', 'tech', 'education', 'general'
# This is configured in code, not in environment variables
# See: src/modules/stt/prompts/prompt-templates.ts
STT_PROMPT_TEMPLATE=church

# ========================================
# RTZR (ReturnZero VITO) Configuration
# ========================================
RTZR_CLIENT_ID=your_rtzr_client_id_here
RTZR_CLIENT_SECRET=your_rtzr_client_secret_here
RTZR_API_URL=https://openapi.vito.ai

# ========================================
# OpenAI Realtime API Configuration
# (WebSocket-based real-time STT)
# ========================================

# Model Selection
# Latest: gpt-4o-realtime-preview-2024-12-17
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17

# Voice for audio output (optional, for future features)
# Options: alloy, echo, fable, onyx, nova, shimmer
OPENAI_VOICE=alloy

# Temperature (0.0 - 1.0)
# Higher = more creative/varied, Lower = more deterministic
OPENAI_TEMPERATURE=0.8

# Max output tokens
# Use 'inf' for unlimited, or a number (e.g., 4096)
OPENAI_MAX_TOKENS=4096

# Voice Activity Detection (VAD) Settings
# VAD Threshold (0.0 - 1.0): Sensitivity for detecting speech
# Lower = more sensitive (catches quieter speech, may have false positives)
# Higher = less sensitive (only clear speech, may miss quiet parts)
OPENAI_VAD_THRESHOLD=0.5

# VAD Silence Duration (milliseconds)
# How long of silence before considering speech ended
OPENAI_VAD_SILENCE=500

# Prefix Padding (milliseconds)
# Audio to include before detected speech start
OPENAI_PREFIX_PADDING=300

# Turn Detection
# Options: 'server_vad' or 'disabled'
# server_vad: Automatic speech detection
# disabled: Manual control required
OPENAI_TURN_DETECTION=server_vad

# ========================================
# Database Configuration
# ========================================
# MySQL Connection String Format:
# DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DATABASE"
# Example: DATABASE_URL="mysql://root:password@localhost:3306/translator"
DATABASE_URL="mysql://root:password@localhost:3306/translator"
