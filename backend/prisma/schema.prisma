// Real-time Translation Service Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ============== User & Auth Models ==============

// User Model
model User {
  id                String    @id @default(uuid())
  email             String    @unique
  password          String?   // Nullable for social login users
  name              String?
  isEmailVerified   Boolean   @default(false)
  isActive          Boolean   @default(true)
  lastLoginAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  rooms             Room[]
  savedTranscripts  SavedTranscript[]
  refreshTokens     RefreshToken[]
  verificationCodes VerificationCode[]

  @@index([email])
  @@map("users")
}

// Refresh Token for JWT
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

// Email Verification Code
model VerificationCode {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([code])
  @@map("verification_codes")
}

// ============== Core Models ==============

// Room Model - Represents a translation session
model Room {
  id            String    @id @default(uuid())
  roomCode      String    @unique  // 6-character room code
  speakerId     String    // Socket/session ID (not unique anymore - user can have multiple rooms)
  speakerName   String    @default("Speaker")
  status        String    @default("ACTIVE") // ACTIVE | PAUSED | ENDED
  password      String?   // Optional room password
  userId        String?   // Owner user ID (nullable for guest speakers)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  endedAt       DateTime?

  // Relations
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  listeners     Listener[]
  transcripts   Transcript[]
  sttTexts      SttText[]
  roomSettings  RoomSettings?

  @@index([roomCode])
  @@index([status])
  @@index([speakerId])
  @@index([userId])
  @@map("rooms")
}

// Room Settings - Configuration for each room
model RoomSettings {
  id                  String   @id @default(uuid())
  roomId              String   @unique
  targetLanguages     String   @default("en") // Comma-separated language codes (e.g., "en,ja,zh")
  promptTemplate      String   @default("general") // general, church, lecture, meeting, custom
  customPrompt        String?  @db.Text // Custom prompt text if template is "custom"
  enableTranslation   Boolean  @default(true)
  enableAutoScroll    Boolean  @default(true)
  maxListeners        Int      @default(100)

  // Relations
  room                Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@map("room_settings")
}

// Listener Session
model Listener {
  id        String   @id @default(uuid())
  socketId  String   @unique
  roomId    String
  name      String   @default("Guest")
  joinedAt  DateTime @default(now())
  leftAt    DateTime?

  // Relations
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([socketId])
  @@map("listeners")
}

// STT Raw Text - Real-time speech recognition
model SttText {
  id          String   @id @default(uuid())
  roomId      String
  text        String   @db.Text
  confidence  Float?   // STT confidence score
  timestamp   DateTime @default(now())

  // Relations
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId, timestamp])
  @@map("stt_texts")
}

// Translation Record - Batch translated text
model Transcript {
  id          String   @id @default(uuid())
  roomId      String
  korean      String   @db.Text // Original Korean text
  english     String   @db.Text // Translated English text
  translations String? @db.Text // JSON object with additional language translations {"ja": "...", "zh": "..."}
  batchId     String?  // Batch identifier for grouped translations
  timestamp   DateTime @default(now())

  // Relations
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId, timestamp])
  @@index([batchId])
  @@map("transcripts")
}

// Saved Transcript - User saved transcripts for later viewing
model SavedTranscript {
  id          String   @id @default(uuid())
  userId      String
  roomCode    String
  roomName    String?  // Room title/description
  transcripts String   @db.LongText // JSON array of transcript objects
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([roomCode])
  @@map("saved_transcripts")
}