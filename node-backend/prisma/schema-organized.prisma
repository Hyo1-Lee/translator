// BridgeSpeak Database Schema - 체계적으로 정리된 버전
// 각 섹션별로 모델을 구분하여 관리

// ====================================
// 1. 설정 (Configuration)
// ====================================
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ====================================
// 2. 사용자 관련 모델 (User Domain)
// ====================================

// 사용자 기본 정보
model User {
  id          String    @id @default(uuid())
  email       String?   @unique
  password    String?   // 해시된 패스워드
  name        String
  role        String    @default("USER") // "USER" | "SPEAKER" | "ADMIN"

  // Profile
  avatar      String?
  bio         String?
  language    String    @default("ko")

  // Stats
  totalSpeakTime   Int     @default(0)
  totalListenTime  Int     @default(0)
  roomsCreated     Int     @default(0)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([email])
  @@map("users")
}

// 구독/결제 정보
model Subscription {
  id          String    @id @default(uuid())
  userId      String    @unique
  plan        String    @default("FREE") // "FREE" | "BASIC" | "PRO" | "ENTERPRISE"

  // Limits
  maxRoomDuration    Int     @default(60)
  maxListeners       Int     @default(10)
  monthlyMinutes     Int     @default(300)
  usedMinutes        Int     @default(0)

  // Billing
  status      String    @default("ACTIVE")
  startDate   DateTime  @default(now())
  endDate     DateTime?
  paymentMethod String?
  lastPayment   DateTime?
  nextPayment   DateTime?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@map("subscriptions")
}

// ====================================
// 3. 방 관련 모델 (Room Domain)
// ====================================

// 방 정보
model Room {
  id          String    @id @default(uuid())
  roomCode    String    @unique
  speakerName String    @default("Speaker")
  status      String    @default("ACTIVE") // "ACTIVE" | "INACTIVE" | "CLOSING"
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  listeners   Listener[]
  transcripts Transcript[]

  @@index([roomCode])
  @@index([status])
  @@map("rooms")
}

// 리스너 세션
model Listener {
  id        String   @id @default(uuid())
  socketId  String   @unique
  roomId    String
  name      String?
  joinedAt  DateTime @default(now())
  leftAt    DateTime?

  // Relations
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@map("listeners")
}

// ====================================
// 4. 번역 관련 모델 (Translation Domain)
// ====================================

// 번역 기록
model Transcript {
  id          String   @id @default(uuid())
  roomId      String
  korean      String
  english     String
  timestamp   DateTime @default(now())
  batchId     String?

  // Relations
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId, timestamp])
  @@map("transcripts")
}

