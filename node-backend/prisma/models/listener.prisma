// Listener 모델 정의
// 리스너(청취자) 세션 관리

model Listener {
  id        String   @id @default(uuid())
  socketId  String   @unique
  roomId    String
  name      String?
  joinedAt  DateTime @default(now())
  leftAt    DateTime?

  // Relations
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@map("listeners")
}